@{
    ViewData["Title"] = "Booking";
}

@model SpaceTravel.Models.Booking

<h1>Book a Flight</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User"></label>
        <input asp-for="User" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="JoinEntities"></label>
        <select asp-for="JoinEntities" asp-items="@(new SelectList(Model.JoinEntities, "BookingDestinationId", "Destination.Name"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Book Flight</button>
</form>
